&.modal-backdrop
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index $zindexModalBackdrop
  background-color $black

  &.fade
    opacity 0

&.modal-backdrop,
&.modal-backdrop.fade.in
  opacity .8

&.modal
  position fixed
  top 10%
  left 50%
  z-index $zindexModal
  width 560px
  margin-left -280px
  background-color $white
  border 1px solid #999
  border 1px solid rgba(0,0,0,.3)
  border-radius 6px
  box-shadow 0 3px 7px rgba(0,0,0,0.3)
  background-clip padding-box
  outline none

  &.fade
    transition opacity .3s linear, top .3s ease-out
    top -25%

  &.fade.in
    top 10%

.modal-header
  padding 9px 15px
  border-bottom 1px solid #eee

  .close
    margin-top 2px

  h3
    margin 0
    line-height 30px

.modal-body
  position relative
  overflow-y auto
  max-height 400px
  padding 15px

.modal-form
  margin-bottom 0

.modal-footer
  padding 14px 15px 15px
  margin-bottom 0
  text-align right
  background-color #f5f5f5
  border-top 1px solid #ddd
  border-radius 0 0 6px 6px
  box-shadow inset 0 1px 0 $white
  clearfix()

  .btn + .btn
    margin-left 5px
    margin-bottom 0

  .btn-group .btn + .btn
    margin-left -1px

  .btn-block + .btn-block
    margin-left 0

&.authorizing
  .modal-body
    height 14 * $containerFontSize
    text-align center

    img
      margin-top $containerFontSize
      margin-bottom $containerFontSize
